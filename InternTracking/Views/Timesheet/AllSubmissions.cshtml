@model IEnumerable<Timesheet>



<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light">
    <div class="container mt-5">
       
            <div class="card-header text-black">
                <h4 class="mb-0">All Timesheet Submissions</h4>
            </div>
       
            <div class="card-body p-4">
                <table class="table table-bordered table-hover table-striped">
                    <thead class="table-light">
                        <tr>
                            <th>Intern Name</th>
                            <th>Email</th>
                            <th>Date</th>
                            <th>Task</th>
                            <th>Hours</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var t in Model)
                        {
                            <tr>
                                <td>@t.Intern?.Name</td>
                                <td>@t.Intern?.Email</td>
                                <td>@t.Date.ToString("dd MMM yyyy")</td>
                                <td>@t.TaskDescription</td>
                                <td>@t.HoursWorked</td>
                                <td>
                                    <span class="badge bg-@GetStatusColor(t.Status)">
                                        @t.Status
                                    </span>
                                </td>
                                <td>
                                    <a href="@Url.Action("Approve", new { id = t.Id })" class="btn btn-success btn-sm me-1">Approve</a>
                                    <a href="@Url.Action("Reject", new { id = t.Id })" class="btn btn-danger btn-sm">Reject</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            <form asp-action="DownloadPdf" asp-controller="Timesheet" method="get">
                <button type="submit" class="btn btn-primary">Download PDF</button>
            </form>

            </div>
        </div>
    

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

@functions {
    string GetStatusColor(string status)
    {
        return status switch
        {
            "Approved" => "success",
            "Rejected" => "danger",
            _ => "secondary"
        };
    }
}
