@model Intern
@{
    string qrCode = ViewBag.QrCode as string;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <style>
        body {
            font-family: Arial;
            text-align: center;
            padding: 50px;
        }

        .certificate {
            border: 10px solid #4CAF50;
            padding: 40px;
        }

        .qr {
            margin-top: 30px;
        }
    </style>
</head>
<body>
    <div class="certificate">
        <h1>Certificate of Internship</h1>
        <p>This certifies that</p>
        <h2>@Model.Name</h2>
        <p>has completed the internship.</p>
        @* <p>Email: @Model.Email</p> *@
        <p>Date: @DateTime.Now.ToString("dd MMMM yyyy")</p>
        <div class="qr">
            @if (!string.IsNullOrEmpty(qrCode))
            {
                <p>Scan to Verify:</p>
                <img src="data:image/png;base64,@qrCode" width="150" />
            }
            else
            {
                <p style="color:red;">QR code not available</p>
            }
        </div>
    </div>
</body>
</html>
