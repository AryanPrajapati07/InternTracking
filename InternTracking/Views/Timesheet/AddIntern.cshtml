@model Intern

<!DOCTYPE html>
<html>
<head>
    <title>Create/Update Task</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        
        body {
            padding: 0;
        }

        .form-container {
            max-width: 500px;
            margin: 0 auto;
        }

            .form-container form {
                padding: 20px;
                background-color: transparent;
                border-radius: 5px;
                
            }

                .form-container form button {
                    margin-top: 10px;
                }
    </style>
</head>
<body>
    <div class="container">
        <div class="form-container">
            <h4>Add Intern</h4>
    <form asp-action="AddIntern" method="post">
       

        <label>Name</label>
        <input type="taxt" class="form-control" asp-for="Name" required />
                </br>
               
        <label>Email</label>
                <input type="email" class="form-control" asp-for="Email" required />
                </br>

                <label>Department</label>
                <input type="text" class="form-control" asp-for="Department" required />
                </br>

                <label>Join Date</label>
                <input type="date" class="form-control" asp-for="JoinDate" required />
                </br>

        <button class="btn btn-primary" type="submit">Save</button>
    </form>

    </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
