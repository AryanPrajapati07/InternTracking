@model Timesheet

<!DOCTYPE html>
<html>
<head>
    <title>Create/Update Task</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
       
        body {
            padding: 0;
        }

        .form-container {
            max-width: 500px;
            margin: 0 auto;
        }

            .form-container form {
                padding: 20px;
                background-color: transparent;
                border-radius: 5px;
            }

                .form-container form button {
                    margin-top: 10px;
                }
    </style>
</head>
<body>
    <div class="container">
        <div class="form-container">
            <h4>Submit Timesheet</h4>
<form asp-action="Submit" method="post">
       
     
    <select class="form-control" asp-for="InternId" asp-items="ViewBag.Interns">
        <option value="">-- Select Intern --</option>
    </select></br>
    <label>Date</label>
    <input type="date" class="form-control" asp-for="Date" required />
                </br>
    <label>Task Description</label>
    <textarea class="form-control" asp-for="TaskDescription" required></textarea>
                </br>
    <label>Hours Worked</label>
    <input class="form-control" type="number" asp-for="HoursWorked" min="1" max="10" required />

    <button class="btn btn-primary" type="submit">Submit Timesheet</button>
</form>
</div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>






